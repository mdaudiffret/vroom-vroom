<div class="container">
  <h1 class="mt-3">Les pilotes</h1>
  <% if @drivers.length > 0 %>
    <% @drivers.each do |driver| %>
      <div class="vroom-card vroom-border-green card mb-3 p-2">
        <div class="row no-gutters">
          <div class="vroom-card-body card-body h-100 d-flex flex-column justify-content-between">
            <p class="card-text font-weight-bold"><%= driver.name %></p>
            <p class="card-text font-weight-light"><%= driver.price %>€/course</p>
          </div>
        </div>
        <div class="d-flex justify-content-around mt-1">
          <%= link_to edit_car_path(driver) do %>
            <button type="button" class="vroom-btn-lg vroom-green btn btn-primary btn-lg">
              <div class="vroom-inmod-sm btn btn-lg btn-block">
                <span class="mx-2 green-text">éditer les infos</span>
              </div>
            </button>
          <% end %>
          <%= link_to car_path(driver), method: :delete, data: { confirm: "sûr sûr?" } do %>
            <button type="button" class="vroom-btn-lg vroom-green btn btn-primary btn-lg">
              <div class="vroom-inmod-sm btn btn-lg btn-block">
                <span class="mx-2 green-text">supprimer</span>
              </div>
            </button>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3>Aucun pilote n'a été ajouté !</h3>
  <% end %>
  <%= link_to "ajouter un pilote", new_driver_path, class: "ml-1 mt-3 vroom-btn-lg vroom-green btn btn-primary btn-lg btn-block" %>
</div>
