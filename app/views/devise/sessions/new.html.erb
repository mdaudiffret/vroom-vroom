<div class="container">
  <h2 class="mt-3">Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: "Adresse email",
                  placeholder: "Entre ton adresse email" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: "Mot de passe",
                  placeholder: "Entre ton mot de passe"  %>
      <%= f.input :remember_me,
                  label: "Souviens toi de moi",
                  input_html: { class: "toggle" },
                  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "mt-3 vroom-btn-lg vroom-green btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
